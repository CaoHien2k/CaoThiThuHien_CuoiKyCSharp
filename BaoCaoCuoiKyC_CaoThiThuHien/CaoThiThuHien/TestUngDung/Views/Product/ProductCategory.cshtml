@model List<ModelEF.Model.Product>
@{
    var category = (ModelEF.Model.Category)ViewBag.Category;
    ViewBag.Title = category.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="content_top">
        <div class="heading">
            <h3>@category.Name</h3>
        </div>
        <div class="see">
            <p><a href="#">tất cả sản phẩm</a></p>
        </div>
        <div class="clear"></div>
    </div>
    <div class="section group">
        @foreach (var item in Model)
            {
                var link = "/chi-tiet/" + item.MetaTitle + "-" + item.ID;
                <div class="grid_1_of_4 images_1_of_4">
                    <a href="@link"><img src="~/Image/@item.Image" alt="" /></a>
                    <h2>@item.Name </h2>
                    <div class="price-details">
                        <div class="price-number">
                            <p><span class="rupees">@item.UnitCost.ToString("##0.000đ")</span></p>
                        </div>
                        <div class="add-cart">
                            <h4><a href="@link">Thêm vào giỏ hàng</a></h4>
                        </div>
                        <div class="clear"></div>
                    </div>

                </div>
            }
        

    </div>
</div>

